{
  "name": "splash-web-terminal",
  "version": "1.0.0",
  "description": "Web-based terminal with Claude CLI support using Express, Socket.io, and xterm.js - now with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "rspack build --watch --mode development",
    "dev:server": "tsx watch src/server.ts",
    "build": "yarn build:client && yarn build:server",
    "build:client": "rspack build --mode production",
    "build:server": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist public/bundle.js public/bundle.js.map"
  },
  "keywords": [
    "terminal",
    "xterm",
    "socket.io",
    "express",
    "claude",
    "web-terminal",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "node-pty": "^1.0.0",
    "p5": "^2.1.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@rspack/cli": "^1.1.7",
    "@rspack/core": "^1.1.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/p5": "^1.7.7",
    "concurrently": "^8.2.2",
    "socket.io-client": "^4.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "packageManager": "yarn@4.5.3+sha256.dddc0b96ad2dca8d56a5302b56bf3cbf8210654474a6bf88877da61e866f3d46"
}
